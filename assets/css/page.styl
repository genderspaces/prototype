#subheading
  background-color $themeColour
  border: 16px solid $themeColour
  border-left: 0
  border-right: 0
  border-image-source: url('/assets/images/diagonals3.png')
  border-image-slice: 74 0 74 0
  border-image-repeat: round
  color: white
  text-shadow: 1px 1px 2px black
  background-origin: border-box
  background-size: cover
  background-image: linear-gradient(155deg, $themeColour 0%, $themeColourLight 100%)

h2
  font-style: italic
  font-size: 2.5rem
  max-width: 36rem
  line-height: 1.25

@media screen and (min-width: 740px)
  h2
    font-size 3rem

// Boxes on the page
.inclusivity, #rules
  border: 2px solid $themeColour
  margin: 2rem 0
  padding: 2rem
  p
    margin: 0

.inclusivity
  //background: $themeColour
  //color: white
  color: $themeColour
  font-size: 2rem
  line-height: 1.25

.events
  padding: 0
  list-style-type: none
  line-height: 1.25
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  li
    margin-bottom: 1rem
  a
    text-decoration: none
    max-width: 23rem
    width: 100%
    height: 18rem
    display: flex
    flex-direction: column
    justify-content: space-between
    background-size: cover
    background-repeat: no-repeat
    background-position: center
  h4, p
    margin: 0
    padding: .75rem 1rem
    color: white
    background-color: rgba(0,0,0,.7)
  h4
    font-size: 1.5rem

#rules
  h3
    margin-top: 0
  ul
    display: flex
    flex-wrap: wrap
  li
    width: 16rem
  .icon
    background-color: #04A75C
    padding: 0.25rem
    border-radius: .5rem
  img.icon
      width: 2.5rem !important